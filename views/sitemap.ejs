<?xml version="1.0" encoding="UTF-8"?>

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">

    <% if (!err) { %>
        <% for (var i in items) { %>
            <url>

                <loc><%=items[i].loc%></loc>
                <% if (items[i].lastmod) {%>
                <lastmod><%=items[i].lastmod%></lastmod>
                <%}%>
                <changefreq>monthly</changefreq>
                <% if (items[i].image) { %>
                <image:image>
                    <image:loc><%=items[i].image.src%></image:loc>
                    <image:title><%=items[i].image.title%></image:title>
                </image:image>
                <%}%>
            </url>
        <% } %>
    <% } else { %>
        <error><%=err%></error>
    <% } %>

</urlset> 